<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="#FFC0CB">

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tela Principal"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#D81B60"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/buttonSorteio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sortear Número"
        android:backgroundTint="#E91E63"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/buttonAtividadeA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ir para AtividadeA"
        android:backgroundTint="#8BC34A"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/buttonAtividadeB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ir para AtividadeB"
        android:backgroundTint="#FF5722"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/buttonPaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abrir Paint"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/buttonUserList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listagem de Usuários"
        android:backgroundTint="#009688"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/sensorData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X: 0.00 | Y: 0.00 | Z: 0.00"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"/>
</LinearLayout>
